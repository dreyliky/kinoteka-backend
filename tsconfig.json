{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
        "@core": ["./src/core"],
        "@core/*": ["./src/core/*"],
        "@helpers": ["./src/helpers"],
        "@helpers/*": ["./src/helpers/*"],
        "@adapters": ["./src/adapters"],
        "@adapters/*": ["./src/adapters/*"],
        "@data": ["./src/data"],
        "@data/*": ["./src/data/*"],
        "@enums": ["./src/enums"],
        "@enums/*": ["./src/enums/*"],
        "@states": ["./src/states"],
        "@states/*": ["./src/states/*"],
        "@services": ["./src/services"],
        "@services/*": ["./src/services/*"],
        "@repositories": ["./src/repositories"],
        "@repositories/*": ["./src/repositories/*"],
        "@controllers": ["./src/controllers"],
        "@controllers/*": ["./src/controllers/*"],
        "@interfaces": ["./src/interfaces"],
        "@interfaces/*": ["./src/interfaces/*"],
    }
  }
}
